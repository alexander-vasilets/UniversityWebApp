
@model SelectDisciplineViewModel

@{
    ViewData["Title"] = "Select";
}
<h4>Select disciplines for student @Model.StudentName</h4>
<form asp-action="Select">
    <div class="form-group">
        <input type="hidden" asp-for="@Model.StudentId" />
        <input type="hidden" asp-for="@Model.StudentName" />
        @for (int i = 0; i < Model.Filters.Count; i++)
        {
            <input type="checkbox" asp-for="@Model.Filters[i].Selected" />
            <label asp-for="@Model.Filters[i].Selected">@Model.Filters[i].Name</label>
            <input type="hidden" asp-for="@Model.Filters[i].Id" />
            <input type="hidden" asp-for="@Model.Filters[i].Name" />
            <br />
        }
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}